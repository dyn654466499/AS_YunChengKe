<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/image_default_560"
    android:scaleType="centerCrop"
    android:id="@+id/iv_active_city"

    />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="#60000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15人参加"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_active_attend"
                android:textSize="14sp"
                />
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="156人关注"
                  android:id="@+id/tv_active_follow"
                  android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                />
        </LinearLayout>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="赵雷全国巡演宁波CMK专场"
        android:id="@+id/tv_active_title"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型："

        android:textSize="14sp"
        android:textColor="@color/common_gray_color"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:id="@+id/tv_active_type"
        android:textSize="14sp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址："
            android:textColor="@color/common_gray_color"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_gray_color"
            android:id="@+id/tv_active_addresss"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："
            android:id="@+id/tv_active_time"
            android:textColor="@color/common_gray_color"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_gray_color"
            android:textSize="14sp"
            />
    </LinearLayout>
</LinearLayout>



</LinearLayout>