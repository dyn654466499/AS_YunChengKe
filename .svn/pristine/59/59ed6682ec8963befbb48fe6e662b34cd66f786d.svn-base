<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.daemon.activities.MyConsumeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_status_height"
        android:background="@color/ticket_title_color"/>
    <include layout="@layout/layout_title_blue"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ticket_title_color"
        android:paddingTop="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:background="@drawable/ticket_title_corner"
            android:padding="1dp"
            >

            <Button
                android:id="@+id/btn_my_consume_shopping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/title_shopping"
                android:textSize="15sp"
                android:background="@null"
                android:textColor="@color/ticket_white"
                />
                <Button
                    android:id="@+id/btn_my_consume_localCity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_localCity"
                    android:textSize="15sp"
                    android:background="@null"
                    android:textColor="@color/ticket_white"
                    />

                <Button
                    android:id="@+id/btn_my_consume_catering"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_catering"
                    android:textSize="15sp"
                    android:background="@null"
                    android:textColor="@color/ticket_white"

                    />

                <Button
                    android:id="@+id/btn_my_consume_hotel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/title_hotel"
                    android:textSize="15sp"
                    android:background="@null"
                    android:textColor="@color/ticket_white"
                    />
            <Button
                android:id="@+id/btn_my_consume_airTicket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/title_ticket"
                android:textSize="15sp"
                android:background="@null"
                android:textColor="@color/ticket_white"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ticket_bg_gray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
     <include layout="@layout/layout_error"
         android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
