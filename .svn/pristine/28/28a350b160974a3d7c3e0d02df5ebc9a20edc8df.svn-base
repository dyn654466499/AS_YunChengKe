<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
    android:orientation="vertical"
        >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/imageView_catering_activity_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:minHeight="150dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout_catering_activity_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/ticket_black"
            android:layout_gravity="end|bottom"
            android:orientation="vertical"
            android:alpha="0.65"
            />

        <LinearLayout
            android:id="@+id/linearLayout_catering_activity_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@null"
            android:layout_gravity="end|bottom"
            android:gravity="center"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/tv_catering_activity_personNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ticket_white"
                android:textSize="14sp"
                android:text="23人参加"
                />

            <TextView
                android:id="@+id/tv_catering_activity_attentionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/ticket_white"
                android:textSize="14sp"
                android:text="118人关注"
                />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_catering_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ticket_black"
            android:textSize="18sp"
            android:text="活动名称"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ticket_font_gray"
                android:textSize="14sp"
                android:text="类型："
                />

            <TextView
                android:id="@+id/tv_catering_activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/catering_title_color"
                android:textSize="14sp"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ticket_font_gray"
                android:textSize="14sp"
                android:text="地址："
                />

            <TextView
                android:id="@+id/tv_catering_activity_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/ticket_font_gray"
                android:textSize="14sp"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ticket_font_gray"
                android:textSize="14sp"
                android:text="时间："
                />

            <TextView
                android:id="@+id/tv_catering_activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/ticket_font_gray"
                android:textSize="14sp"
                android:text=""
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>