<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/main_bg"
    android:minWidth="@dimen/exit_min_width"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
     >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="请输入交易密码"
        android:textColor="@color/type_grayc"
        android:textSize="@dimen/text_size_large" />

         <com.yunchengke.app.dynamic.view.SecurityPasswordEditText
             android:id="@+id/pay_password"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:minHeight="80dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:textColor="@color/black" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:contentDescription="@string/app_name"
        android:scaleType="matrix"
        android:src="#cccccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/liftButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_btn_selector"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="取消"
            android:textColor="@color/tab_select" />

        <ImageView
            android:id="@+id/dialog_images"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="matrix"
            android:src="#cccccc" />

        <TextView
            android:id="@+id/rightButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_btn_selector"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="确定"
            android:textColor="@color/tab_select" />
    </LinearLayout>

</LinearLayout>