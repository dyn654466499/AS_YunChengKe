<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:paddingLeft="@dimen/activity_margin_left"
                android:paddingRight="@dimen/activity_margin_right"
                android:layout_width="match_parent"
                android:minHeight="60dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

    <com.yunchengke.app.ui.view.daemon.CircleImageView
        android:id="@+id/iv_item_dynamic_comment_portrait"
        app:border_color="@color/transparent"
        app:border_width="1dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:layout_width="@dimen/portrait_height"
        android:layout_height="@dimen/portrait_height"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_toRightOf="@id/iv_item_dynamic_comment_portrait"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/lyt_item_dynamic_top"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_dynamic_comment_name"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/common_black_color"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_item_dynamic_comment_datetime"
                android:layout_alignParentRight="true"
                android:textSize="10dp"
                android:textColor="@color/common_gray_color"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_dynamic_comment_content"
            android:textSize="15dp"
            android:textColor="@color/common_black_color"
            android:layout_below="@id/lyt_item_dynamic_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>