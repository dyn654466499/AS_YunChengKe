<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >
            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_weight="0.0"
                android:src="@drawable/ic_launcher"
                android:visibility="gone" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#D7D6D6" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/main_tab0"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/main_tab0_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/ic_tab_faxian" />

                    <TextView
                        android:id="@+id/main_tab0_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_tab_text1"
                        android:textColor="@color/tab_default"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_tab1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/main_tab1_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/ic_tab_dongtai" />

                    <TextView
                        android:id="@+id/main_tab1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_tab_text2"
                        android:textColor="@color/tab_default"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_tab2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/main_tab2_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/ic_tab_tongcheng" />

                    <TextView
                        android:id="@+id/main_tab2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_tab_text3"
                        android:textColor="@color/tab_default"
                        android:textSize="13sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/main_tab3"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp" >

                    <!-- android:scaleType="centerInside" -->

                    <ImageView
                        android:id="@+id/main_tab3_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/ic_tab_canyin" />

                    <TextView
                        android:id="@+id/main_tab3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/main_tab3_iv"
                        android:paddingLeft="2dp"
                        android:text="@string/main_tab_text4"
                        android:textColor="@color/tab_default"
                        android:textSize="13sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/main_tab4"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp" >

                    <!-- android:scaleType="centerInside" -->

                    <ImageView
                        android:id="@+id/main_tab4_iv"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/ic_tab_xiaoxi" />

                    <TextView
                        android:id="@+id/main_tab4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/main_tab4_iv"
                        android:paddingLeft="2dp"
                        android:text="@string/main_tab_text5"
                        android:textColor="@color/tab_default"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>