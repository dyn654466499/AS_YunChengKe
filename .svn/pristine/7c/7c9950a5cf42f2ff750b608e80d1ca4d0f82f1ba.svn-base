<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ticket_bg_gray"
    tools:context="com.daemon.activities.OrderTicketDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_status_height"
        android:background="@color/ticket_title_color"/>
    <include
        layout="@layout/layout_title_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/ticket_bg_gray"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ticket_white"
                android:layout_marginTop="15dp"
                android:showDividers="middle"
                android:divider="@drawable/line"
                >

                <TextView
                    android:id="@+id/tv_order_localCity_detail_tipStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:textColor="@color/ticket_black"
                    android:textSize="16sp"
                    android:text="您的订单已生成"
                    />

                <TextView
                    android:id="@+id/tv_order_localCity_detail_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:textColor="@color/ticket_black"
                    android:textSize="16sp"
                    android:text="普通订单24小时内未支付将自动取消"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单状态:"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_font_gray"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_localCity_detail_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:textColor="@color/ticket_font_gray"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@color/ticket_white"
                android:showDividers="middle"
                android:divider="@drawable/line"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="活动名称:"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_font_gray"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_localCity_detail_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="报名人数:"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_font_gray"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_localCity_detail_personCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="总额:"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_font_gray"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_localCity_detail_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:textSize="17sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单编号:"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_font_gray"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_localCity_detail_orderNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="下单时间:"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_font_gray"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_localCity_detail_orderTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="15dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout_order_localCity_detail_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ticket_white"
        android:visibility="gone"
        >
        <!-- 立即支付 -->
        <Button
            android:id="@+id/btn_order_localCity_detail_pay_now"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ticket_btn_selector"
            android:text="立即支付"
            android:textColor="#ffffff"
            android:textSize="@dimen/button_textSize" />
    </RelativeLayout>
</LinearLayout>
