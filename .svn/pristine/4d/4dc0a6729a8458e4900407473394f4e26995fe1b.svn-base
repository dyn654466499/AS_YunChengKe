<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="15dp"
    >

    <TextView
        android:id="@+id/tv_order_ticket_detail_passengerInfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:text="标题"
        android:textColor="@color/ticket_black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_order_ticket_detail_passengerInfo_certType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="身份证"
            android:textColor="@color/ticket_black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text=":"
            android:textColor="@color/ticket_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_order_ticket_detail_passengerInfo_certNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="2313213213513"
            android:textColor="@color/ticket_black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>