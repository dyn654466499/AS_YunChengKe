<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_itme_comments"
        android:layout_width="68px"
        android:layout_height="68px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_itme_comments_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="岁月舟义"
            android:textSize="33px"
            android:textColor="#333333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_itme_comments_name"
            android:text="鸡肥肠蛋糕真的好好吃"/>
        <TextView
            android:id="@+id/tv_itme_comments_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:textSize="20px"
            android:textColor="#999999"
            android:text="03-01 11:56"/>
    </RelativeLayout>


</LinearLayout>