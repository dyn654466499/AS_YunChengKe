<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edt_publish_dynamic_content"
        android:textSize="15dp"
        android:textColor="@color/common_black_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_margin_left"
        android:paddingRight="@dimen/activity_margin_right"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="left|top"
        android:minHeight="150dp"
        android:hint="动态内容"
        android:background="@color/white" />

    <GridView
        android:id="@+id/gdv_publish_dynamic_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_margin_left"
        android:paddingRight="@dimen/activity_margin_right"
        android:gravity="left"
        android:columnWidth="74dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:listSelector="@color/transparent"
        android:numColumns="auto_fit"
        android:stretchMode="none"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp" >
    </GridView>

    <include layout="@layout/common_split_line"/>

</LinearLayout>
