<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ticket_white"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        >

     <ImageView
         android:id="@+id/imageView_catering_icon"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:scaleType="fitXY"
         android:src="@drawable/submit_edit_clear_normal"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        >

        <EditText
            android:id="@+id/et_catering_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusable="false"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/ticket_black"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            >

            <EditText
                android:id="@+id/et_catering_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="false"
                android:singleLine="true"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/ticket_font_gray"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/et_catering_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@null"
            android:focusable="false"
            android:singleLine="true"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/ticket_font_gray"
            />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>
