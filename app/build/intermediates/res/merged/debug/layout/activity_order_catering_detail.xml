<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ticket_bg_gray">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_status_height"
        android:background="@color/ticket_title_color"/>
    <include
        layout="@layout/layout_title_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/ticket_bg_gray"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ticket_white"
                android:showDividers="middle"
                android:divider="@drawable/line"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="姓名"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_black"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_catering_personName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="30dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="手机"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_black"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_catering_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="30dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_order_catering_detail_personCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="人数"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_black"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_catering_personCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="30dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="用餐时间"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_black"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_catering_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="30dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout_order_catering_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="送餐地址"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/ticket_black"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_catering_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="30dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="备注"
                        android:gravity="right"
                        android:textColor="@color/ticket_black"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/tv_order_catering_beizhu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="30dp"
                        android:textSize="16sp"
                        android:background="@null"
                        android:singleLine="true"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ticket_white"
    android:layout_marginTop="15dp"
    android:showDividers="middle"
    android:divider="@drawable/line"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <EditText
            android:id="@+id/et_order_catering_storeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="16sp"
            android:background="@null"
            android:focusable="false"
            android:singleLine="true"
            android:text=""
            />
    </LinearLayout>

    <com.yunchengke.app.ui.view.daemon.ListViewForScrollView
        android:id="@+id/lv_order_catering_dishes_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="16sp"
            android:background="@null"
            android:singleLine="true"
            android:text="总计"
            />

        <TextView
            android:id="@+id/tv_order_catering_totalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:background="@null"
            android:singleLine="true"
            android:text=""
            />
    </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout_order_catering_detail_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ticket_white"
        android:visibility="gone"
        >

        <!-- 立即支付 -->
        <Button
            android:id="@+id/btn_order_catering_detail_pay_now"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ticket_btn_selector"
            android:text="立即支付"
            android:textColor="#ffffff"
            android:textSize="@dimen/button_textSize" />

         <!--到店支付-->
        <Button
            android:id="@+id/btn_order_catering_detail_pay_toShop"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_order_catering_detail_pay_now"
            android:background="@drawable/ticket_btn_selector"
            android:text="到店支付"
            android:textColor="#ffffff"
            android:textSize="@dimen/button_textSize"
            android:visibility="gone"
            />
         <!--定金支付-->
        <Button
            android:id="@+id/btn_order_catering_detail_pay_deposit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_order_catering_detail_pay_toShop"
            android:background="@drawable/ticket_btn_selector"
            android:text="定金支付"
            android:textColor="#ffffff"
            android:textSize="@dimen/button_textSize"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
</LinearLayout>
