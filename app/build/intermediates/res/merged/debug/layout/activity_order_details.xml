<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1334px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/layout_title_blue"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="#f0f0f0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#333333"
                android:text="您的订单已生成"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dingdan"
                android:textSize="30px"
                android:textColor="#333333"
                android:text="普遍订单24小时未支付将自动取消"/>
        </RelativeLayout>
        <View
            android:layout_marginLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#b3b3b3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="#999999"
            android:text="订单状态:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="未支付"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#b3b3b3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="订单编号:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="1234567"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#b3b3b3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="订单时间:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="2015-12-25 15:37:32"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="#f0f0f0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="活动名称:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textSize="30px"
                android:textColor="#007aff"
                android:text="测试菜馆名"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="#f0f0f0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="总额: ￥"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:textSize="30px"
                android:textColor="#ef3b33"
                android:text="10"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#b3b3b3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="订单编号:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="1234567"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="30px"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#b3b3b3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="订单时间:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textSize="30px"
                android:textColor="#999999"
                android:text="2015-12-25 15:37:32"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="47px"
            android:background="#f0f0f0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:gravity="center">
            <Button
                android:layout_width="690px"
                android:layout_height="80px"
                android:background="@drawable/shape"
                android:text="银联支付"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>