<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="15dp"
    >

    <ImageView
        android:id="@+id/imageView_order_catering_detail_dishIcon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:background="@null"
        />

        <TextView
        android:id="@+id/tv_order_catering_detail_dishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:text="$40"
        android:textColor="@color/ticket_black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_order_catering_detail_dishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:textColor="@color/ticket_black"
            android:text="49" />

        <TextView
            android:id="@+id/tv_order_catering_detail_dishCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:textColor="@color/ticket_font_gray"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>