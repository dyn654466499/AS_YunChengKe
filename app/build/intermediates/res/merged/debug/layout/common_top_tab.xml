<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="false"
    android:orientation="vertical"
    tools:ignore="UselessParent,DisableBaselineAlignment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_titlebar_height"
        android:background="@color/top_bar_bg"
        android:orientation="vertical"
        tools:ignore="HardcodedText,ContentDescription" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/top_tab_rl1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/top_tab_text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="text1"
                    android:background="@color/tab_4"
                    android:textColor="@color/tab_8"
                    android:textSize="@dimen/title_tab_size" />

                <TextView
                    android:id="@+id/top_tab_number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/top_tab_info_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/top_tab_rl2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/top_tab_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@color/tab_3"
                    android:gravity="center"
                    android:text="text2"
                    android:textColor="@color/tab_8"
                    android:textSize="@dimen/title_tab_size" />

                <TextView
                    android:id="@+id/top_tab_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/top_tab_info_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/top_tab_rl3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/top_tab_text3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@color/tab_3"
                    android:gravity="center"
                    android:text="text3"
                    android:textColor="@color/tab_8"
                    android:textSize="@dimen/title_tab_size" />

                <TextView
                    android:id="@+id/top_tab_number3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/top_tab_info_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/top_tab_rl4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/top_tab_text4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@color/tab_3"
                    android:gravity="center"
                    android:text="text4"
                    android:textColor="@color/tab_8"
                    android:textSize="@dimen/title_tab_size" />

                <TextView
                    android:id="@+id/top_tab_number4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/top_tab_info_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@color/tab_1" />
    </RelativeLayout>

</LinearLayout>