<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/title_bk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_status_height">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" >

        <!-- 左边 -->
        <TextView
            android:id="@+id/tv_base_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/title_menu_padding"
            android:paddingRight="@dimen/title_menu_padding"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:singleLine="true"
            android:textColor="@color/title_left_text_color"
            android:textSize="@dimen/title_menu_textsize" />

        <!-- 右边 -->

        <TextView
            android:id="@+id/tv_base_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/title_menu_padding"
            android:paddingRight="@dimen/title_menu_padding"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:textColor="@color/title_right_text_color"
            android:textSize="@dimen/title_menu_textsize" />

        <!-- 中间-标题 -->

        <TextView
            android:id="@+id/tv_base_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin"
            android:layout_marginRight="@dimen/title_margin"
            android:gravity="center"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/title_center_textsize" />

        <!-- 搜索 -->
        <EditText
            android:id="@+id/et_catering_search"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:isScrollContainer="false"
            android:maxLines="1"
            android:singleLine="true"
            android:typeface="normal"
            android:textSize="13dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="@dimen/title_menu_padding"
            android:background="@drawable/bg_search_edit_box"
            android:layout_toLeftOf="@id/tv_base_title_right"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

    </RelativeLayout>

</LinearLayout>