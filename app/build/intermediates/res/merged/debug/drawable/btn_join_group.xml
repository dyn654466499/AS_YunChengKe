<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">

            <solid android:color="@color/btn_group_pressed_color"/>

            <corners android:radius="2dp"/>

        </shape>
    </item>


    <item android:state_pressed="false" android:state_enabled="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">

            <solid android:color="@color/btn_group_normal_color"/>

            <corners android:radius="2dp"/>

        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">

            <stroke android:color="#e0e0e0" android:width="@dimen/split_line_height"/>

            <solid android:color="@color/btn_group_disabled_color"/>

            <corners android:radius="2dp"/>

        </shape>
    </item>
</selector>