<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:id="@+id/placeholder_header"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_below="@id/placeholder_header"
        android:paddingLeft="@dimen/activity_margin_left"
        android:paddingRight="@dimen/activity_margin_right"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="17dp"
            android:id="@+id/tv_item_media_past_period"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:textColor="@color/common_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_item_media_past_image"
            android:layout_marginTop="17dp"
            android:contentDescription="@null"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </LinearLayout>

</RelativeLayout>