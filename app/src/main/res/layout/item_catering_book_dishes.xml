<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/ticket_white"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    >
        <ImageView
            android:id="@+id/imageView_catering_book_dishes_icon"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/submit_edit_clear_normal"
            />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <EditText
            android:id="@+id/et_catering_book_dishes_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:background="@null"
            android:focusable="false"
            android:text="名字"
            android:textColor="@color/ticket_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_catering_book_dishes_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钱"
                android:textColor="@color/catering_title_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_catering_book_dishes_nums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/catering_title_color"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="end"
                >

                <ImageButton
                    android:id="@+id/imageBtn_catering_book_dishes_jian"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageBtn_catering_book_dishes_jia"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_jian"
                    android:scaleType="centerCrop"
                    android:background="@drawable/layout_frame_white"
                    android:visibility="gone"
                    />

                <ImageButton
                    android:id="@+id/imageBtn_catering_book_dishes_jia"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_jia_white"
                    android:scaleType="centerCrop"
                    android:background="@drawable/catering_title_corner"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>