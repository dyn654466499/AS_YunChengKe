<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/ticket_white"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/imageView_catering_detail_comment_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"

        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_catering_detail_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="昵称"
            android:textColor="@color/ticket_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_catering_detail_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_catering_detail_comment_user"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|bottom"
            android:text="2015-11-28"
            android:textColor="@color/ticket_font_gray"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_catering_detail_comment_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:text=""
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/ticket_black"
        android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>