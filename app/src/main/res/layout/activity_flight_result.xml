<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ticket_bg_gray"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_status_height"
        android:background="@color/ticket_title_color"/>
    <include layout="@layout/layout_title_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#ffffff"
        android:padding="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="出发日期:"
            android:textColor="@color/ticket_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ticket_result_leaveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="1月1日"
            android:textColor="@color/ticket_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_flight_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        >
        <ExpandableListView
            android:id="@+id/elv_flight_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:childDivider="@drawable/line"
            android:groupIndicator="@null" />
    </LinearLayout>


</LinearLayout>