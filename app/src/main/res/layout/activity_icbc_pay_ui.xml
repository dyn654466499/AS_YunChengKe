<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_pay_icbc_editor"
        >

        <EditText
            android:id="@+id/et_pay_card_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入银行预留号码"
            android:paddingLeft="5dp"
            android:textColorHint="@color/login_hint" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_pay_icbc_editor"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
     >

        <EditText
            android:id="@+id/et_pay_card_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:hint="账(卡)号后六位"
            android:textColorHint="@color/login_hint" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_pay_icbc_editor"
            android:layout_weight="1">

            <EditText
                android:id="@+id/pay_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:maxLength="6"
                android:background="@null"
                android:inputType="number"
                android:hint="@string/code_hint"
                android:textColorHint="@color/login_hint" />
        </LinearLayout>

        <Button
            android:id="@+id/get_paycode"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/login_show_password"
            android:text="获取短信验证码"
            android:textColor="@color/white"
            android:textSize="14sp"></Button>
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/bt_pay_money"
            android:background="@drawable/login_show_password"
            android:text="确认付款"
            android:textColor="@color/white"
            ></Button>
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示："
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="1.请确保输入的手机号为银行绑定的手机号。"
        android:textColor="@color/menu_style"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2.工行e支付单笔支付限额最高为5000.00元。日累计限额最高为5000.00元"
        android:textColor="@color/menu_style"
        android:textSize="16sp"
        />


</LinearLayout>





</RelativeLayout>
