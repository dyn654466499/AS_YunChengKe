<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.yunchengke.app.ui.widget.SegmentedGroup
        android:orientation="horizontal"
        android:id="@+id/sgp_group_top"
        android:gravity="center"
        android:background="@color/group_background"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RadioButton
            android:id="@+id/topic"
            style="@style/SegmentRadioButton"
            android:checked="true"
            android:textColor="@drawable/button_text_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/segment_button_height"
            android:text="@string/topic" />

        <RadioButton
            android:id="@+id/group"
            style="@style/SegmentRadioButton"
            android:textColor="@drawable/button_text_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/segment_button_height"
            android:text="@string/group"
             />

        <RadioButton
            android:id="@+id/category"
            style="@style/SegmentRadioButton"
            android:textColor="@drawable/button_text_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/segment_button_height"
            android:text="@string/category" />

        <RadioButton
            android:id="@+id/mygroup"
            style="@style/SegmentRadioButton"
            android:textColor="@drawable/button_text_color"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/segment_button_height"
            android:text="@string/my_group" />

    </com.yunchengke.app.ui.widget.SegmentedGroup>

    <com.yunchengke.app.ui.widget.SmartViewPager
        android:id="@+id/vpg_group_content"
        android:layout_below="@id/sgp_group_top"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>