<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal">


    <com.yunchengke.app.ui.view.daemon.CircleImageView
        android:id="@+id/comment_head"
        android:layout_width="40dp"
        android:layout_marginRight="16dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
       />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/yck_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/comment_head"
            android:layout_toEndOf="@+id/comment_head"
            android:layout_toRightOf="@+id/comment_head"
            android:text="测试云城客"
            android:textSize="16dp"
            android:textColor="@color/common_black_color" />

        <TextView
            android:id="@+id/yck_user_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/comment_head"
            android:layout_toEndOf="@+id/comment_head"
            android:layout_toRightOf="@+id/comment_head"
            android:text="测试云城客2"
            android:textSize="14dp"
            android:textColor="@color/common_black_color" />
    </LinearLayout>




    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/yck_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginRight="16dp"
        android:text="02-02 20:59"
        android:textColor="@color/common_gray_color"
        android:textSize="12sp" />


</LinearLayout>